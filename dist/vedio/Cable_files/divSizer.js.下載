function loadedData(i) {
	var vid = $(".video"+i).get(0);
	var vidinwidth = vid.videoWidth;
	var vidinheight = vid.videoHeight;
	var videocontainer = $(".videocontainer"+i).get(0);
	if(vid.width !== 0 && vid.height !== 0) {
		videocontainer.style.width =  Math.floor(vid.width)+"px";
		videocontainer.style.height =  Math.floor(vid.height)+"px";
	}
	else if(vid.width !== 0) {
		videocontainer.style.width = Math.floor(vid.width)+"px";
		videocontainer.style.height =  Math.floor((vidinheight * vid.width) / vidinwidth)+"px";
	}
	else if(vid.height !== 0) {
		videocontainer.style.width =  Math.floor((vidinwidth * vid.height) / vidinheight)+"px";
		videocontainer.style.height =  Math.floor(vid.height)+"px";
	}
	else {
		videocontainer.style.width =  "100%";
		videocontainer.style.height =  Math.floor((vidinheight * videocontainer.style.width) / vidinwidth)+"px";
	}
}

function vimeoShadowBox(i) {
	var videocontainer = $(".vimeocontainer"+i).get(0);
	var sh = window.innerHeight;
	var sw = window.innerWidth;
	if(sh-100 < 768 || sw-100 < 1024) {
		if(sh < sw) {
			videocontainer.height = sh - 100;
			videocontainer.width = Math.floor(((sh-100)*1024)/768);
		}
		else if(sh > sw) {
			videocontainer.width = sw - 100;
			videocontainer.height = Math.floor(((sw-100)*768)/1024);
		}
		else {
			videocontainer.width = sw - 100;
			videocontainer.height = sh - 100;
		}
	}
	else {
		videocontainer.width = "1024";
		videocontainer.height = "768";
	}
}